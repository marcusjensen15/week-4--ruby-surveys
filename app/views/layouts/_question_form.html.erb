<%= render "layouts/errors", :object => @question %>

<%= form_for [@survey, @question] do |f| %>
<%= f.label :question_title %>
<%= f.text_field :question_title %>
<br>
  <%= f.label :question_text %>
  <%= f.text_field :question_text %>
  <br>
  <%= f.label :answer1 %>
  <%= f.text_field :answer1 %>
  <%= f.label :answer2 %>
  <%= f.text_field :answer2 %>
  <%= f.label :answer3 %>
  <%= f.text_field :answer3 %>
  <%= f.label :answer4 %>
  <%= f.text_field :answer4 %>
  <br>
  <%= f.label :user_response %>
  <%= f.text_field :user_response %>
  <hr>
  <%= f.submit  %>
<% end %>
